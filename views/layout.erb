<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= @title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= css :application %>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= js  :application %>
  </head>
  <body>
    <div class="container-fluid" style="width: 100%; height: 100%; padding-left: 0;">
<!-- 

        <img src="/images/webkit.png" alt="wkHTMLtoPDF" />wkHTMLtoPDF
        <img src="/images/crowdpdf.png" alt="" />CrowdPDF
        <img src="/images/docraptor.png" alt="" />DocRaptor
      -->

      <header>
        <section>
          <nav>
            <ul>
              <li class="brand">
                  wkPDF Tester
              </li>
              <li class="link">
                <a href="/">
                  Search
                </a>
              </li>
              <li class="link">
                <a href="/tester">
                Tester
                </a>
              </li>
            </ul>
          </nav>
        </section>
      </header>

      <%= yield %>
    </div>

    <script type="text/javascript">
      $.backstretch([
          "/images/01.jpg"
        , "/images/02.jpg"
        , "/images/03.jpg"
      ], {duration: 3000, fade: 1500});

      $(window).on("backstretch.after", function (e, instance, index) {
        // Do something
        $('header').animate({ opacity:1, 'margin-top':0 }, 500);
      });

      $(function() {
        var temp;

        $('.nav-bar li').hover(function() {
          temp = $(this).parent().children('.current')
          temp.removeClass('current');
          $(this).addClass('current');
        }, function() {
          $(this).removeClass('current');
          temp.addClass('current');
        }).on('click',function(e){
          var index = $(this).index();

          temp = $(this).parent().children('.current')
          temp.removeClass('current');
          $(this).addClass('current');

          $('iframe').hide();
          $('iframe[data-index='+index+']').show().animate({ opacity: 1 }, 500);
        });
      });
    </script>

  </body>
</html>
